namespace Intrusion.Common
{
	public interface ICommonConfig
	{
		// Gets the technology configs.
		property IMapMarkersConfig MapMarkers { get; };
		
		// Gets the technology configs.
		property ITechnologyConfig Technology { get; };
		
		// Gets the profession configs.
		property ProfessionConfig Professions { get; };
		
		// Gets the vehicle class names config.
		property IVehicleClassNamesConfig VehicleClassNames { get; };
		
		// Gets the profession vehicles config.
		property IProfessionVehiclesConfig ProfessionVehicles { get; };
		
		// Gets the base config.
		property BaseConfig BaseConfig { get; private set; };
		
		property IResourceLocationConfig ResourceLocation { get; };
	};
};
