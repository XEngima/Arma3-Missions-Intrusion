	controls[] = { BaseBackground, Header, SummaryText, ProfessionOverview, BaseCloseButton };
	
	class Header : BaseDialogHeader {
		text = "Brigade Overview";
	};
	
	class SummaryText : BaseMultilineText {
		idc = 30;              // set to -1, unneeded
		text = "Your brigade's total administration: <none>\nYour brigade's total production: <none>";
	};
	
	class ProfessionOverview : BaseMultilineText {
		idc = 31;              // set to -1, unneeded
		text = "";
		x = 0.05;
		y = 0.27;
