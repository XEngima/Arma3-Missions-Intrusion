namespace Intrusion.Ai
{
	public class BoardAction : IAction
	{
		// Creates a BoardAction object.
		public constructor("_timeoutTime" as Scalar, "_vehicle" as AiVehicle)
		{
			_self.TimeoutTime = _timeoutTime;
			_self.Vehicle = _vehicle;
			_self.Service = classNull;
		};
		
		// Gets the time when the action is regarded as timed out.
		public property Scalar TimeoutTime { get; private set; };
		
		// Gets the service associated with the action. classNull if there are no service associated.
		public property IActionService Service { get; private set; };
		
		// Gets the AI squad's vehicle. classNull if the AI squad does not have a vehicle.
		public property AiVehicle Vehicle { get; private set; };
	};
};
