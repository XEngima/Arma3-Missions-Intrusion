namespace Intrusion.Ai
{
	public class AiSquadBrain
	{
		private fields ["_mWorld" as IWorld];
	
		// Creates a AiSquadBrain object.
		public constructor("_world" as IWorld)
		{
			_mWorld = _world;
			_self.State = AiSquadState.Idle;
		};
		
		// Gets the current state of the squad.
		public property AiSquadState State { get; private set; };
		
		// Gives the AI brain an opportunity to make a new decision.
		public method MakeDesicion()
		{
			if (_self.State == AiSquadState.Idle) then {
				_self.State = AiSquadState.Moving;
			};
		};
	};
};
