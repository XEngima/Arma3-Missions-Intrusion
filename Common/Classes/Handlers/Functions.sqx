	public class Functions
	{
		// Gets the correct time since mission start, no matter SP or MP.
		// Returns time since mission start in seconds.
		public static method Scalar Time()
		{
			private _time = time;
			
			if (isMultiplayer) then {
				_time = serverTime;	
			};
			
			_time
		};
	};
