using Intrusion.Server;
using Intrusion.Common;

namespace Tests.Helpers
{
	public class TestVehicleClassNamesConfig : IVehicleClassNamesConfig
	{
		private fields ["_mReturnedClassNames" as Array, "_mExpectedParamSide" as Side, "_mExpectedParamProfessionType" as ProfessionType];
	
		// Creates a TestVehicleClassNamesConfig object.
		public constructor {
			_mReturnedClassNames = [];
			_mExpectedParamSide = sideUnknown;
			_mExpectedParamProfessionType = ProfessionType.Undefined;
		};
		
		public method SetExpectationsForGetProVehicleClassNames("_paramSide" as Side, "_paramProfessionType" as ProfessionType, "_returnedClassNames" as Array)
		{
			_mExpectedParamSide = _paramSide;
			_mExpectedParamProfessionType = _paramProfessionType;
			_mReturnedClassNames = _returnedClassNames;
		};
		
		// Gets the vehicle class names by side and profession type.
		// _side (Side): Side.
		// _professionType (ProfessionType): Profession type.
		// Returns (Array): An array with vehicle class names. An empty array if no class names were found.
		public method Array GetProVehiclesClassNames("_side" as Side, "_professionType" as ProfessionType)
		{
			private ["_returnedClassNames" as Array];
			
			_returnedClassNames = _mReturnedClassNames;
			
			if (_side != _mExpectedParamSide || _professionType != _mExpectedParamProfessionType) then {
				_returnedClassNames = ["CRAP", "SHIT"];
			};
			
			_returnedClassNames
		};
	};
};
