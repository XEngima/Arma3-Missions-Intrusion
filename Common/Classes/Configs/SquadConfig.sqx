namespace Intrusion.Common
{
	public class SquadConfig : ISquadConfig
	{
		// Creates a SquadConfig object.
		public constructor {
			_self.RatingSquadLeaderMaxDistance = 150;
		};
		
		// Gets the required maximum distance between team members and their leader to gain rating. All team members must be within this distance from the squad leader 
		// for anyone in the group to be assigned rating.
		public property Scalar RatingSquadLeaderMaxDistance { get; private set; };
	};
};
