using Intrusion.Common;

namespace Intrusion.Server
{
	public class ProfessionVehiclesConfig : IProfessionVehiclesConfig
	{
		private fields ["_mProVehicles"];
	
		// Creates a ProVehiclesConfig object.
		public constructor {
			_mProVehicles = [
				[ProfessionType.Transport, 250, Technology.Transport] new ProfessionVehicleInfo,
				[ProfessionType.Fuel, 500, Technology.Services] new ProfessionVehicleInfo,
				[ProfessionType.Ammo, 750, Technology.Services] new ProfessionVehicleInfo,
				[ProfessionType.Repair, 1000, Technology.Services] new ProfessionVehicleInfo,
				[ProfessionType.Motorized, 1250, Technology.Motorized] new ProfessionVehicleInfo,
				[ProfessionType.Mechanized, 1500, Technology.Mechanized] new ProfessionVehicleInfo,
				[ProfessionType.AntiArmor, 1750, Technology.AntiArmor] new ProfessionVehicleInfo,
				[ProfessionType.Armored, 2000, Technology.Armored] new ProfessionVehicleInfo,
			];
		};
		
		// Gets a profession vehicle from the list.
		// Returns (ProfessionVehicle): A profession vehicle. classNull if the vehicle type does not exist.
		//public static method ProfessionVehicleInfo GetVehicle("_professionType" as ProfessionType) // TODO SQX (TEST ADDED): If method is static it should not count as interface implemented
		public method ProfessionVehicleInfo GetVehicle("_professionType" as ProfessionType)
		{
			scopeName "main";
			
			{
				if (_professionType == _x.ProfessionType) then {
					_x breakOut "main";
				};
			} foreach _mProVehicles as ProfessionVehicleInfo;
			
			classNull
		};
	};
};
