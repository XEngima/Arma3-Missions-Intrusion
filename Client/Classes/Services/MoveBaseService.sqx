 * Description:
 * Service that handles the process when a brigade leader is building a new base.
 */
namespace Intrusion.Client
{
	public class MoveBaseService : IService
	{
		// Creates a MoveBaseService object.
		public constructor {
			_self.IsRunning = false;
		};
		
		public property Boolean IsRunning { get; private set; };
		
		private method Run()
		{
			call MoveBaseDialog.ShowDialog;
		};
		
		public method RunAsync()
		{
			_self.IsRunning = true;
			[] spawn _self.Run;
		};
	};
};
