namespace Intrusion.Ai
{
	public class AiWeaponInfo
	{
		// Creates a AiWeaponInfo object.
		public constructor("_side" as Side, "_launcherClassName" as String, "_launcherAmmoClassName" as String)
		{
			_self.Side = _side;
			_self.LauncherClassName = _launcherClassName;
			_self.LauncherAmmoClassName = _launcherAmmoClassName;
		};
		
		public property Side Side { get; private set; };
		
		public property LauncherClassName { get; private set; };
		
		public property LauncherAmmoClassName { get; private set; };
	};
};

