/*
  This is how you add a new profession:
  1. Add the profession in the enum below.
  2. Add info to class ProfessionConfig.
  3. Add info to class ProfessionVehiclesProdConfig.
  4. Add info to class VehicleClassNamesConfig.
*/
namespace Intrusion.Common
{
	public enum ProfessionType
	{
		Undefined = 0, // Important: Undefined must be the option with lowest number
		Transport = 1,
		Fuel = 2,
		Ammo = 3,
		Repair = 4,
		Infantry = 5,
		Motorized = 6,
		Sniper = 7,
		Mortars = 8,
		AntiArmor = 9,
		Mechanized = 10,
		Armored = 11,
	};
	
	public class ProfessionTypeMeta
	{
		public static method Init()
		{
			_self.NonWarriorTypes = [
				ProfessionType.Transport,
				ProfessionType.Fuel,
				ProfessionType.Ammo,
				ProfessionType.Repair
			];
			
			_self.WarriorTypes = [
				ProfessionType.Infantry,
				ProfessionType.Motorized,
				ProfessionType.Sniper,
				ProfessionType.Mortars,
				ProfessionType.AntiArmor,
				ProfessionType.Mechanized,
				ProfessionType.Armored,
			];
			
			_self.LastValue = ProfessionType.Armored;
			_self.ProfessionTypeCount = _self.LastValue as Scalar;
		};

		public static property Array NonWarriorTypes { get; private set; };
		public static property Array WarriorTypes { get; private set; };		
		public static property ProfessionType LastValue { get; private set; };		
		public static property Scalar ProfessionTypeCount { get; private set; };
	};
};
