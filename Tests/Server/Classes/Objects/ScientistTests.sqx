using Sqx.UnitTest;
using Tests.Helpers;
using Intrusion.Common;
using Intrusion.Server;

namespace Tests.Server
{
	public class ScientistTests
	{
		#region Fields
		
		private static fields [
			"_mMessageHandler" as TestMessageHandler,
			"_mResourceBook" as ResourceBook,
			"_mScientist" as Scientist];
		
		#endregion
		
		// Creates a OrderQueueTests object.
		public static method Init {
			["Tests.Server", "ScientistTests", [
				"NoProgress_GetsFirstTechnology_TechnologyInvented"
			]] call TestEngine.Register;
		};
		
		// Creates a production manager and a group.
		private static method BeforeEach {
			_mResourceBook = new ResourceBook;
			_mMessageHandler = new TestMessageHandler;
			_mScientist = [west, _mResourceBook, new TestTechnologyConfig, _mMessageHandler] new Scientist;
		};
		
//		private static method AfterEach {
//		};
		
		private static method NoProgress_GetsFirstTechnology_TechnologyInvented {
			// Arrange
			[1500] call _mResourceBook.DepositProduction;
			
			// Act
			call _mScientist.PerformResearch;
			
			// Assert
			[[Technology.Transport] call _mScientist.TechnologyIsInvented, "Technology Transport should be invented."] call Assert.IsTrue;
			[1, count _mMessageHandler.Messages] call Assert.AreEqual;
		};
		
		private static method NoProgress_GetsNotEnoughTechnology_TechnologyNotInvented {
			// Arrange
			[500] call _mResourceBook.DepositProduction;
			
			// Act
			call _mScientist.PerformResearch;
			
			// Assert
			[[Technology.Transport] call _mScientist.TechnologyIsInvented, "Technology Transport should be invented."] call Assert.IsFalse;
			[0, count _mMessageHandler.Messages] call Assert.AreEqual;
		};
	};
};
