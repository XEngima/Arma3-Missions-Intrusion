 *
 * Description:
 * Contains config information about map markers concerning a squad.
 */

namespace Intrusion.Client
{
	public class SquadMarkersConfig : ISquadMarkersConfig
	{
		// Initializes a SideMarkersConfig object.
		public constructor {
			_self.SquadVehicleMarkerType = "mil_box";
			_self.SquadMemberMarkerType = "hd_dot";
			_self.PlayerMarkerColor = "ColorBlue";
		};
		
		// Gets the marker type of the squad's vehicle.
		public property String SquadVehicleMarkerType { get; private set; };
		
		// Gets the marker type of the squad's member on the map.
		public property String SquadMemberMarkerType { get; private set; };
		
		// Gets the marker color of the player's marker on the map.
		public property String PlayerMarkerColor { get; private set; };
	};
};
