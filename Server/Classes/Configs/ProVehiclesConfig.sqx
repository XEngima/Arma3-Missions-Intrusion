using Intrusion.Common;

namespace Intrusion.Server
{
	public class ProVehiclesConfig
	{
		private static fields ["_mProVehicles"];
	
		// Creates a ProVehiclesConfig object.
		public static method Init {
			_mProVehicles = [
				[ProfessionType.Transport, 10] new ProVehicleInfo,
				[ProfessionType.Fuel, 10] new ProVehicleInfo,
				[ProfessionType.Ammo, 10] new ProVehicleInfo,
				[ProfessionType.Repair, 10] new ProVehicleInfo,
				[ProfessionType.Motorized, 50] new ProVehicleInfo,
				[ProfessionType.Mechanized, 80] new ProVehicleInfo,
				[ProfessionType.AntiArmor, 50] new ProVehicleInfo,
				[ProfessionType.Armored, 120] new ProVehicleInfo,
			];
		};
		
		// Gets a profession vehicle from the list.
		// Returns (ProfessionVehicle): A profession vehicle. classNull if the vehicle type does not exist.
		public static method ProVehicleInfo GetVehicle {
			params ["_professionType" as ProfessionType];
			
			scopeName "main";
			
			{
				if (_professionType == _x.ProfessionType) then {
					_x breakOut "main";
				};
			} foreach _mProVehicles as ProVehicleInfo;
			
			classNull
		};
	};
};
