using Intrusion.Common;

namespace Intrusion.Ai
{
	public interface IKnowledge
	{
		// gets or sets the group associated with this AI knowledge.
		property Group Group { get; set; };
		
		// gets or sets the group members associated with this AI knowledge.
		property Array Members { get; set; };
		
		// Gets or sets the state of the AI team.
		property AiSquadState State { get; set; };
		
		// Gets or sets an order.
		property Order Order { get; set; };
		
		// Gets or sets the squad's current action
		property IAction CurrentAction { get; set; };
		
		// Gets whether the order is given by the brigade leader or if it is on own initiative.
		property Boolean OrderIsGivenByBrigadeLeader { get; set; };
		
		// Gets or sets the information about base markers.
		property MapMarkerInfo MapMarkerInfo { get; set; };
		
		// Gets or sets the leader's position.
		property Array LeaderPos { get; set; };
		
		// Gets the time when the leader got its new pos.
		property Scalar LeaderPosTime { get; set; };
	};
};
